<div class="container">
  <div class="row">
  <div class="col-lg-10 user-form">
    <div class="user-upper-content">
      <h1>profile</h1>
      <div class="row">
        <div class="col-md-5">
          <div class="profile_image" style="background-image: url(<%= @user.avatar.url(:medium) %>);"></div>
        </div>
        <div class="col-md-7">
          <div class="profile">
            <div class="content_1">
            <%= @user.nickname %> / <%= @user.area %>
            </div>
          <div class="content_2 clearfix">
            <div class="left_content_2">
              テニス歴：６年
            </div>
            <div class="middle_content_2">
            </div>
            <div class="right_content_2">

            </div>
          </div>
          <div class="profile_line">
          </div>
            <div class="content_3">
              <%= @user.detail %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="user-downleft-content">
          <h1>xxさんが開催中のオフ会</h1>
          <p>
          <% unless @off_meetings.blank? %>
            <ul>
              <% @off_meetings.each do |off_meeting| %>
                <li><%= link_to "#{off_meeting.summary}", off_meeting_path(off_meeting) %> | <%= off_meeting.day %></li>
              <% end %>
            </ul>
          <% else %>
            <h2>開催中のオフ会はありません</h2>
          <% end %>
          </p>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="user-downright-content">
          <h1>xxさんが参加予定のオフ会</h1>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-2">col-md-2</div>
  </div>
</div>


<% if current_user && current_user.id == @user.id %>
  <div class="profile_edit">
    <%= link_to 'プロフィール編集', edit_user_path(current_user), {:class => 'btn btn-primary withripple' }%>
  </div>
<% end %>