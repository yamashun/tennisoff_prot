  <div class="container">
  <div class="row">
    <div class="col-md-2">col-sm-2</div>
    <div class="col-md-8">
      <h1>検索画面</h1>
        <%= search_form_for(@search, url: off_meetings_search_path) do |f| %>
          <div class="form-group">
            <%= f.label :address, 'エリア' %>
            <%= f.text_field :address_cont %>
          </div>
          <div class="form-group">
            <%= f.label :day, '開催日時' %>
            <%= f.date_select :day_gt %>
            <%= f.date_select :day_lt %>
          </div>
          <div>
            <%= f.submit '検索する' %>
          </div>
        <% end %>


        <table class="table">
          <thead>
            <tr>
              <th>概要</th>
              <th>開催日</th>
              <th>場所</th>
              <th>レベル</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @off_meetings.each do |off_meeting| %>
              <tr>
                <td><%= off_meeting.summary %></td>
                <td><%= off_meeting.day %></td>
                <td><%= off_meeting.address %></td>
                <td><%= off_meeting.level %></td>
                <!-- <td><%= off_meeting.detail %></td> -->
                <td><%= link_to 'Show', off_meeting %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-md-2">col-sm-2</div>
  </div>
</div>