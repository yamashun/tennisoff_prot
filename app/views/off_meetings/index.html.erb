
<div class="header-image-area">
  <div class="header-image">
    <%= image_tag 'jyoko01.jpg' %>
  </div>
  <div class="header-image">
    <%= image_tag 'nishikori01.jpg' %>
  </div>
  <div class="header-image">
    <%= image_tag 'murray02.jpg' %>
  </div>
  <div class="header-image">
    <%= image_tag 'fed01.jpg' %>
  </div>
</div>

<div class="container">

  <div class="row">
    <div class="col-md-9">
    <p id="notice"><%= notice %></p>
       <% if user_signed_in? && @following_off_meetings.present? %>
        <div class="top-off-meetings">
          <h1>お気に入り</h1>
          <p>フォロー中ユーザーが開催しているオフ会を表示しています。</p>
          <%= render "off_meetings", off_meetings: @following_off_meetings %>
          <%= paginate @following_off_meetings, param_name: :following %>
        </div>
        <div class="space">
        </div>
      <% end %>
      <div class="top-off-meetings">
        <h1>New</h1>
        <p>新しく更新のあったオフ会から順番に表示しています。</p>
        <%= render "off_meetings", off_meetings: @off_meetings %>
        <%= paginate @off_meetings, param_name: :new %>
      </div>
      <div class="space">
      </div>
      
    </div>
    <div class="col-md-3">
      <div class="top-search-area">
      <h2>検索</h2>
        <%= search_form_for(@search, url: off_meetings_search_path) do |f| %>
          <div class="top-search-items-area">
            <div class="form-group">
              <div class="top-search-label">
                <%= f.label :summary, 'タイトル', class: "seach-label" %>
              </div>
              <div class="top-search-item">
                <%= f.text_field :summary_cont, placeholder: "例）ダブルス" %>
              </div>
            </div>
            <div class="form-group">
              <div class="top-search-label">
                <%= f.label :address, 'エリア' %>
              </div>
              <div class="top-search-item">
                <%= f.text_field :address_cont, placeholder: "例）千葉県浦安市" %>
              </div>
            </div>
            <div class="form-group">
              <div class="top-search-label">
                <%= f.label :day, '開催日', class: "top-seach-label" %>
              </div>
              <div class="top-search-item">
                <div class="search-date">
                  <%= f.text_field :day_gt, class: 'datepicker', placeholder: "例）2016-7-23" %> 〜
                </div>
                <div class="search-date">
                  <%= f.text_field :day_lt, class: 'datepicker', placeholder: "例）2016-8-5" %>
                </div>
              </div>
            </div>
          </div>
          <div class="top-search-button-area">
            <div id="top-search-button">
              <%= f.submit '検索する', class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>




